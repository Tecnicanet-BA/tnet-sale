<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="sale_renting_update_price_wizard_form_view" model="ir.ui.view">
            <field name="name">sale.renting.update.price.wizard.fomr</field>
            <field name="model">sale.renting.update.price.wizard</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Massive Update of Rental Prices">
                    <header>
                        <field name="visible_confirm" invisible="1"/>
                        <button name="action_upload_rental_product" string="Upload Rental Products" type="object" class="oe_highlight"/>
                        <button name="action_update_rental_price" string="Preview Update Price" type="object" class="oe_highlight"/>
                        <button name="action_confirm" string="Confirm" type="object" class="oe_highlight" attrs="{'invisible': [('visible_confirm', '=', False)]}"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" attrs="{'invisible': [('update', '!=', 'new')], 'required': [('update', '=', 'new')]}"/>
                                <field name="pricelist_id" attrs="{'invisible': [('update', '!=', 'existing')], 'required': [('update', '=', 'existing')]}"/>
                            </h1>
                        </div>
                        <group string="Parameters" name="main">
                            <group name="left">
                                <field name="update"/>
                            </group>
                            <group name="right">
                                <field name="based_pricelist_id"/>
                                <field name="percentage"/>
                                <field name="rounding_factor"/>
                            </group>
                        </group>
                        <group string="Rental Product" colspan="4" col="4">
                            <field name="rental_product_ids" nolabel="1" colspan="4">
                                <tree create="0" open="0" editable="top">
                                    <field name="name" readonly="1" force_save="1"/>
                                    <field name="duration"/>
                                    <field name="unit"/>
                                    <field name="currency_id"/>
                                    <field name="actual_price" readonly="1" force_save="1"/>
                                    <field name="new_price"/>
                                    <field name="product_variant_ids" invisible="1"/>
                                    <field name="rental_pricing_id" invisible="1"/>
                                </tree>
                            </field>
                        </group>
                    </sheet>
                    <footer>
                        <div> </div>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_update_rental_prices_wizard" model="ir.actions.act_window">
            <field name="name">Massive Update of Rental Prices</field>
            <field name="res_model">sale.renting.update.price.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="binding_model_id" ref="product.model_product_template"/>
            <field name="binding_view_types">list</field>
        </record>
    </data>
</odoo>
